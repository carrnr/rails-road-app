<%= form_for @map, remote: true do |f| %>

  <div class="field">
    <%= f.label :name, "Map Name" %>
    <%= f.text_field :name, :required => true, class: 'name-field' %>
  </div>

  <div class="field">
    <%= f.label :description, "Details of Closure" %>
    <%= f.text_area :description, class: 'desc-field' %>
  </div>

  <div class="field">
    <%= f.label :date_closed, "Closure Begins" %>
    <%= f.datetime_field :date_closed, class: 'closed-field' %>
  </div>

  <div class="field">
    <%= f.label :date_reopen, "Re-Open Date" %>
    <%= f.datetime_field :date_reopen, class: 'reopen-field' %>
  </div>


  <div class="field">
    <%= f.submit "Continue", class: "save-map" %>
  </div>


<% end %>
