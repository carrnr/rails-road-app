<%= form_for @map, remote: true do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, class: 'name-field' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'desc-field' %>
  </div>

  <div class="field">
    <%= f.label :date_closed %>
    <%= f.date_field :date_closed, class: 'closed-field' %>
  </div>

  <div class="field">
    <%= f.label :date_reopen %>
    <%= f.date_field :date_reopen, class: 'reopen-field' %>
  </div>


  <!-- <div class="field">
    <%#= f.label :coordinates %>
    <%#= f.text_field :coordinates, name: "map[coordinates][]", :step => 0.000001, class: 'points' %>
  </div> -->


  <div class="field">
    <%= f.submit "Save", class: "save-map" %>
  </div>


<% end %>
